class pessoa:
  def _init_(self, nome, idade, cpf):
    self.nome = nome
    self.idade = idade
    self.cpf = cpf
  def exibirInfo(self):
    print("Nome: ", self.nome, "Idade: ", self.idade, "CPF: ", self.cpf)

